{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",

  "files": {
    "ignore": [
      "dist",
      "node_modules",
      "**/*.png",
      "**/*.ico",
      "**/*.jpg",
      "**/*.jpeg",
      "**/*.svg",
      "**/*.webp",
      "**/*.avif",
      "pnpm-lock.yaml"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "globals": ["chrome", "__DEV__"],
    "jsxRuntime": "transparent",
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded"
    }
  }
}
